class PlayerCameraControl : ZilchComponent
{
    var MyPlayer:Cog;
    var MySprite:Cog;
    function Initialize(init : CogInitializer)
    {
        Zero.Connect(this.Space, Events.LogicUpdate, this.OnLogicUpdate);
        
    }

    function OnLogicUpdate(event : UpdateEvent)
    {
        this.Owner.Transform.Translation = this.MyPlayer.Transform.Translation + Real3(0,-2,20);
        //this.Owner.Orientation.LookAtDirectionWithUp(Real3(0,0,1), Real3(0,1,0));
    }
}
