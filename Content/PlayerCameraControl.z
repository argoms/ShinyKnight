class PlayerCameraControl : ZilchComponent
{
    var Player:Cog;
    var Sprite:Cog;
    function Initialize(init : CogInitializer)
    {
        Zero.Connect(this.Space, Events.LogicUpdate, this.OnLogicUpdate);
        this.Sprite = this.Owner.Parent.FindChildByName("Sprite");
        this.Player = this.Owner.Parent;
    }

    function OnLogicUpdate(event : UpdateEvent)
    {
        this.Owner.Transform.Translation = this.Sprite.Transform.Translation + Real3(0,0,5);
    }
}
